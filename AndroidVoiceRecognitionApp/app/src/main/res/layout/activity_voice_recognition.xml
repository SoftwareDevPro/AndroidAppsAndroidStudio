<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".VoiceRecognitionActivity">

    <TextView
        android:id="@+id/txtLblVoiceRecognition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="0dp"
        android:focusable="false"
        android:text="Voice Recognition"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="28dp"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/txtLblSupportsVoiceRecognition"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLblVoiceRecognition"
        android:layout_alignEnd="@+id/txtLblVoiceRecognition"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="181dp"
        android:focusable="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Supports Voice Recognition?:"
        android:textColor="#FFFFFF"
        android:textSize="13dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="55dp" />

    <EditText
        android:id="@+id/txtSupportsVoiceRecognition"
        android:layout_width="169dp"
        android:layout_height="39dp"
        android:layout_below="@+id/txtLblSupportsVoiceRecognition"
        android:layout_alignEnd="@+id/btnStartVoiceRecognition"
        android:layout_marginTop="-41dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rect_text_edit"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:text=""
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:layout_width="155dp"
        android:layout_height="24dp"
        android:layout_toRightOf="@+id/txtSupportsVoiceRecognition"
        android:text="Voice Recognition Results:"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="159dp" />

    <Button
        android:id="@+id/btnStartVoiceRecognition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="87dp"
        android:text="Start Voice Recognition"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="103dp" />

    <EditText
        android:id="@+id/txtResults"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnStartVoiceRecognition"
        android:layout_alignStart="@+id/btnStartVoiceRecognition"
        android:background="@drawable/rect_text_edit"
        android:textAlignment="gravity"
        android:gravity="top"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="  " />


</RelativeLayout>

